@model University.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="studentID" class="control-label"></label>
                <input asp-for="studentID" class="form-control" />
                <span asp-validation-for="studentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="firstName" class="control-label"></label>
                <input asp-for="firstName" class="form-control" />
                <span asp-validation-for="firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="lastName" class="control-label"></label>
                <input asp-for="lastName" class="form-control" />
                <span asp-validation-for="lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="enrollmentDate" class="control-label"></label>
                <input asp-for="enrollmentDate" class="form-control" />
                <span asp-validation-for="enrollmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="acquiredCredits" class="control-label"></label>
                <input asp-for="acquiredCredits" class="form-control" />
                <span asp-validation-for="acquiredCredits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="currentSemestar" class="control-label"></label>
                <input asp-for="currentSemestar" class="form-control" />
                <span asp-validation-for="currentSemestar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="educationLevel" class="control-label"></label>
                <input asp-for="educationLevel" class="form-control" />
                <span asp-validation-for="educationLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (Model.profilePicture == null)
                {
                    <label class="control-label">Picture</label>
                    <input type="file" name="imageUrl" />
                }
                else
                {
                    <label>Chosen picture:</label>
                    <img src="~/studentImages/@Model.profilePicture"
                         height="100" width="100"
                         asp-append-version="true" />
                    <br />
                    <input type="file" name="imageUrl" />
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
