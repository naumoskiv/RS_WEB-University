@model University.ViewModels.TeacherNameDegreeRankViewModel;


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Teachers" asp-action="Index" method="get">
    <p>
        <select asp-for="teacherDegree" asp-items="Model.degreeVM">
            <option value="">Degree</option>
        </select>
        <select asp-for="teacherRank" asp-items="Model.rankVM">
            <option value="">Academic Rank</option>
        </select>
        Name: <input type="text" asp-for="searchString" />
        <input type="submit" value="Filter" />
        <a asp-action="Index">Back to Full List</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.teachersVM[0].firstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teachersVM[0].lastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teachersVM[0].degree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teachersVM[0].academicRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teachersVM[0].officeNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teachersVM[0].hireDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.teachersVM) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.academicRank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.officeNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hireDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-controller="Home" asp-action="Admin">Back to Menu</a>
</div>