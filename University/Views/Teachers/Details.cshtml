@model University.Models.Teacher

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/images/" + (Model.profilePicture ?? "blankImage.png");
}

<h1>Details</h1>

<div>
    <h4>Teacher</h4>
    <hr />
    <img src="@photoPath"
         height="200" width="200"
         asp-append-version="true" />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.firstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.firstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.lastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.lastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.degree)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.degree)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.academicRank)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.academicRank)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.officeNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.officeNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.hireDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hireDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.firstCourses)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Programme</th>
                    <th>Semester</th>
                </tr>
                @foreach (var item in Model.firstCourses)
                {
                    <tr>
                        <td>
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.title)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.programme)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.semester)
                        </td>
                    </tr>
                }
            </table>
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.secondCourses)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Course Title</th>
                    <th>Programme</th>
                    <th>Semester</th>
                </tr>
                @foreach (var item in Model.secondCourses)
                {
                    <tr>
                        <td>
                            <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.ID">@Html.DisplayFor(modelItem => item.title)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.programme)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.semester)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
